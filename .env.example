# База данных (SQLite)
DATABASE_URL="file:./dev.db"

# JWT-секрет для сессий авторизации
# Сгенерируйте свой: openssl rand -hex 32
JWT_SECRET="change-me-to-a-random-string"

# Устанавливать ли флаг Secure у auth-куки.
# true  — только если сайт работает по HTTPS (рекомендуется для продакшна с TLS)
# false — если сайт работает по HTTP (например, по IP без SSL)
COOKIE_SECURE="false"

# Email-адреса администраторов (через запятую)
# Пользователь, зарегистрировавшийся с этим email, получит роль ADMIN
ADMIN_EMAILS="admin@yourcompany.com"

# ИИ-генерация этапов через OpenRouter (https://openrouter.ai)
# Получите ключ на https://openrouter.ai/keys
OPENROUTER_API_KEY="your-openrouter-api-key"

# Модель для генерации
AI_GENERATION_MODEL="google/gemini-3.1-pro-preview"

# Модель для верификации (проверяет логику и реалистичность)
AI_VERIFICATION_MODEL="google/gemini-2.0-flash-001"
